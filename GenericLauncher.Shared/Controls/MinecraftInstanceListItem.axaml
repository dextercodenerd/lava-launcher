<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:GenericLauncher.Controls"
        xmlns:model="clr-namespace:GenericLauncher.Model">
    <Design.PreviewWith>
        <controls:MinecraftInstanceListItem />
    </Design.PreviewWith>

    <Style Selector="controls|MinecraftInstanceListItem">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate
                x:DataType="model:MinecraftInstanceItem">
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        Background="LightBlue"
                        CornerRadius="5"
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="{Binding Instance.Id}"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding Instance.VersionId}"
                                   TextWrapping="Wrap" />
                        <TextBlock Text="{Binding Instance.State}"></TextBlock>
                        <TextBlock Text="{Binding ProgressMessage}"></TextBlock>
                        <Button Content="Play"
                                Command="{TemplateBinding ClickPlayCommand}"
                                CommandParameter="{Binding}" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
