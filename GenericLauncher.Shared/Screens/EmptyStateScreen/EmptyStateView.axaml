<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:emptyStateScreen="clr-namespace:GenericLauncher.Screens.EmptyStateScreen"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="GenericLauncher.Screens.EmptyStateScreen.EmptyStateView"
             x:DataType="emptyStateScreen:EmptyStateViewModel">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <emptyStateScreen:EmptyStateViewModel />
    </Design.DataContext>

    <!--
    Load resources, so we see them in the designer.
    They are visible in the app even without this, because they are loaded in the main window.
     -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Panel>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="10">
            <Button Padding="10,5"
                    Command="{Binding ClickLoginCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Image Width="16" Source="{DynamicResource IconAddAccount}" />
                    <TextBlock Text="Login" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Padding="10,5">
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Image Width="16" Source="{DynamicResource IconDownload}" />
                    <TextBlock Text="Download Minecraft" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Panel>
</UserControl>
